<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.andreasgut.labyrinth.controller.LabyrinthController">
   <BorderPane>
      <center>
          <GridPane fx:id="labyrinthGrid" prefHeight="139.0" prefWidth="595.0" BorderPane.alignment="CENTER" />
      </center>
      <bottom>
         <HBox BorderPane.alignment="CENTER">
            <children>
               <HBox>
                  <children>
                     <Label text="Labyrinthgrösse:" />
                     <Slider fx:id="dimensionSlider" blockIncrement="1.0" majorTickUnit="5.0" max="75.0" min="5.0" minorTickCount="1" onMouseDragged="#changeDimensionLabel" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" />
                     <Label fx:id="dimensionLabel" onDragDetected="#changeDimensionLabel" text="50" />
                     <Button mnemonicParsing="false" onAction="#loadNewLabyrinth" text="Lade neues Labyrinth" />
                  </children>
               </HBox>
                <Button onAction="#showSolversSolution" text="Zeige Lösung" />
               <Button mnemonicParsing="false" text="Teste meine Lösung" />
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Tempo" />
                     <Slider />
                  </children>
               </HBox>
            </children>
         </HBox>
      </bottom>
   </BorderPane>

</AnchorPane>
